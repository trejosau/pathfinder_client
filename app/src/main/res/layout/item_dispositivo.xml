<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Ãcono del dispositivo -->
    <ImageView
        android:id="@+id/ivIcono"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logo_pathfinder2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Nombre del dispositivo -->
    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mi Carro RC"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintStart_toEndOf="@id/ivIcono"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- Tipo de dispositivo -->
    <TextView
        android:id="@+id/tvTipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo: Carro RC"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="@id/tvNombre"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"/>

</androidx.constraintlayout.widget.ConstraintLayout>
